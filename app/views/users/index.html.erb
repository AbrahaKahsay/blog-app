
<section class="card-container">
  <% @users.each do |user| %>
    <div class="users-list">
      <div class="image">
        <img class="user-image" src="<%= user.photo %>" alt="user photo">
      </div>
      <div class="user-info">
        <h1 class="user-name"><%= link_to user.name, user %></h1>
        <p class="post-count">Number of posts: <%= user.posts_counter %></p>
      </div>
    </div>
  <% end %>
</section>